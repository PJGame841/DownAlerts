{
	"compilerOptions": {
			"module": "ES2020",
			"esModuleInterop": true,
			"target": "ES6",
			"noImplicitAny": true,
			"moduleResolution": "node",
			"sourceMap": true,
			"outDir": "dist",
			"baseUrl": ".",
			"paths": {
					"*": [
						"client/*",
						"node_modules/*"
					]
			}
	},
	"include": [
			"src/**/*"
	]
}